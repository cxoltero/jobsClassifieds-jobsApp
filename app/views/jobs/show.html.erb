<div id="jobs">
  <div class = "job">
      <h1>Show </h1>
      <h2><%= @job.title %></h2>
      <p><%= @job.description %></p>
      <p><%= @job.company %></p>
      <div class ="button btn btn-default">
        <%=link_to "Apply for Job", @job.url%>
      </div>
  </div>
</div>
<br>

<div id="links">
  <div class = "btn btn-sm btn-default">
    <%= link_to "Back", root_path %>
  </div>
  <div class = "btn btn-sm btn-default">
    <%= link_to "Edit", edit_job_path(@job) %>
  </div>
  <div class = "btn btn-sm btn-default">
    <%= link_to "Delete", job_path(@job), method: :delete, data: {confirm: 'Are you sure?'} %>
  </div>
</div>
